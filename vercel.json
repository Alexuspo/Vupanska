{
    "version": 2,
    "builds": [
        {
            "src": "requirements.txt",
            "use": "@vercel/python"
        },
        {
            "src": "mkdocs.yml",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "site"
            }
        }
    ],
    "routes": [
        { "handle": "filesystem" },
        { "src": "/(.*)", "dest": "/index.html" }
    ]
}
